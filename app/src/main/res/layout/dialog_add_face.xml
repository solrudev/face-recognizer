<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingHorizontal="@dimen/dialog_padding_horizontal">

	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/imageView_addFace_photo"
		android:layout_width="@dimen/dialog_face_photo_size"
		android:layout_height="@dimen/dialog_face_photo_size"
		android:layout_marginTop="@dimen/dialog_element_margin"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:shapeAppearance="?shapeAppearanceMediumComponent" />

	<EditText
		android:id="@+id/editText_addFace_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginVertical="@dimen/dialog_element_margin"
		android:hint="@string/person_name"
		android:importantForAutofill="no"
		android:inputType="text"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/imageView_addFace_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>